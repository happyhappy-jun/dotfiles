# Chezmoi configuration template
# This file is used by chezmoi to manage dotfiles across different machines

[data]
    # OS detection: "darwin" for macOS, "linux" for Ubuntu
    # Note: .os is a built-in chezmoi variable, will be set automatically
    # We don't set it here to avoid init errors
    
    # Shell detection: "zsh" or "bash"  
    # Default to zsh (common on macOS), can be overridden in local config
    shell = "zsh"
    
    # Architecture - will be set automatically by chezmoi
    # arch = "{{ .arch }}"
    
    # Home directory - will be set automatically by chezmoi
    # homeDir = "{{ .chezmoi.homeDir }}"
    
    # Source directory - will be set automatically by chezmoi
    # sourceDir = "{{ .chezmoi.sourceDir }}"
    
    # Machine-specific variables (can be overridden in ~/.config/chezmoi/chezmoi.toml)
    email = "{{ .email | default "" }}"
    name = "{{ .name | default "" }}"
    gitUser = "{{ .gitUser | default "" }}"

[git]
    # Auto commit changes
    autoCommit = false
    
    # Auto push changes
    autoPush = false
