# Chezmoi configuration template
# This file is used by chezmoi to manage dotfiles across different machines

[data]
    # OS detection: "darwin" for macOS, "linux" for Ubuntu
    # Note: .os is a built-in chezmoi variable, set here for reference
    {{- if hasKey . "os" }}
    os = "{{ .os }}"
    {{- else }}
    os = "unknown"
    {{- end }}
    
    # Shell detection: "zsh" or "bash"
    {{- if hasKey . "os" }}
    shell = {{ if eq .os "darwin" }}"zsh"{{ else }}"bash"{{ end }}
    {{- else }}
    shell = "bash"
    {{- end }}
    
    # Architecture
    {{- if hasKey . "arch" }}
    arch = "{{ .arch }}"
    {{- else }}
    arch = "unknown"
    {{- end }}
    
    # Home directory
    {{- if and (hasKey . "chezmoi") (hasKey .chezmoi "homeDir") }}
    homeDir = "{{ .chezmoi.homeDir }}"
    {{- else }}
    homeDir = ""
    {{- end }}
    
    # Source directory
    {{- if and (hasKey . "chezmoi") (hasKey .chezmoi "sourceDir") }}
    sourceDir = "{{ .chezmoi.sourceDir }}"
    {{- else }}
    sourceDir = ""
    {{- end }}
    
    # Machine-specific variables (can be overridden in ~/.config/chezmoi/chezmoi.toml)
    email = "{{ .email | default "" }}"
    name = "{{ .name | default "" }}"
    gitUser = "{{ .gitUser | default "" }}"

[git]
    # Auto commit changes
    autoCommit = false
    
    # Auto push changes
    autoPush = false
