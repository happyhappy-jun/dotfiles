# Chezmoi configuration template
# This file is used by chezmoi to manage dotfiles across different machines

[data]
    # OS detection: "darwin" for macOS, "linux" for Ubuntu
    # Shell detection based on OS: zsh for macOS, bash for Linux
    # This uses chezmoi's built-in .chezmoi.os variable
    shell = {{ if eq .chezmoi.os "darwin" }}"zsh"{{ else }}"bash"{{ end }}
    
    # Architecture - will be set automatically by chezmoi
    # (arch variable available but not set here)
    
    # Home directory - will be set automatically by chezmoi
    # (homeDir variable available but not set here)
    
    # Source directory - will be set automatically by chezmoi
    # (sourceDir variable available but not set here)
    
    # Machine-specific variables (can be overridden in ~/.config/chezmoi/chezmoi.toml)
    # Set to empty strings by default, override in local config if needed
    email = ""
    name = ""
    gitUser = ""

[git]
    # Auto commit changes
    autoCommit = false
    
    # Auto push changes
    autoPush = false
